# ============================================================================
# NexusDoc Service - Environment Configuration
# ============================================================================

# Service Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=8114
WS_PORT=8115

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=nexusdoc
POSTGRES_USER=unified_brain
POSTGRES_PASSWORD=nexus_secure_password
POSTGRES_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=nexus_neo4j_password

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_LITERATURE=medical_literature
QDRANT_COLLECTION_IMAGES=medical_images
QDRANT_COLLECTION_DRUGS=drug_compounds

# Nexus Service Integration
GRAPHRAG_ENDPOINT=http://localhost:9090
MAGEAGENT_ENDPOINT=http://localhost:9080
FILEPROCESS_ENDPOINT=http://localhost:9099
LEARNINGAGENT_ENDPOINT=http://localhost:9097
SANDBOX_ENDPOINT=http://localhost:9095
AUTH_ENDPOINT=http://localhost:9101

# Google Drive Integration (HIPAA-Compliant Medical Imaging Storage)
GOOGLE_SERVICE_ACCOUNT_KEY=
GOOGLE_DRIVE_FOLDER_ID=
GOOGLE_DRIVE_ENCRYPTION_ENABLED=true
GOOGLE_DRIVE_ENCRYPTION_KEY=
GOOGLE_DRIVE_MAX_FILE_SIZE=5368709120
GOOGLE_DRIVE_CHUNK_SIZE=8388608

# Medical APIs
PUBMED_API_KEY=
PUBMED_API_ENDPOINT=https://eutils.ncbi.nlm.nih.gov/entrez/eutils/
COCHRANE_API_KEY=
OPENROUTER_API_KEY=

# Agent Configuration
MAX_AGENTS=15
AGENT_WARM_POOL_SIZE=5
ENABLE_N_NUMBER_SPAWNING=true
AGENT_SPAWN_TIMEOUT=300000
AGENT_DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# Complexity Scoring Weights
COMPLEXITY_WEIGHT_SYMPTOMS=0.15
COMPLEXITY_WEIGHT_URGENCY=0.25
COMPLEXITY_WEIGHT_HISTORY=0.15
COMPLEXITY_WEIGHT_DATA_VOLUME=0.10
COMPLEXITY_WEIGHT_SPECIALTIES=0.20
COMPLEXITY_WEIGHT_RARE_DISEASE=0.15

# Task Management
TASK_DEFAULT_TIMEOUT=300000
TASK_CLEANUP_INTERVAL=3600000
TASK_RETENTION_DAYS=30

# Security
JWT_SECRET=change-me-in-production-min-32-chars
JWT_EXPIRY=15m
BCRYPT_ROUNDS=12
HIPAA_AUDIT_ENABLED=true
ENCRYPTION_ALGORITHM=aes-256-cbc

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# OpenTelemetry Tracing
OTEL_ENABLED=true
OTEL_SERVICE_NAME=nexusdoc
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
JAEGER_ENDPOINT=http://localhost:16686

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9116

# Memory Configuration
NODE_OPTIONS=--max-old-space-size=4096 --expose-gc

# Medical Knowledge Configuration
MEDICAL_ONTOLOGY_UPDATE_INTERVAL=86400000
MEDICAL_LITERATURE_CACHE_TTL=3600000
DRUG_INTERACTION_CACHE_TTL=86400000

# Feature Flags
FEATURE_CLINICAL_CONSULTATION=true
FEATURE_MEDICAL_IMAGING=true
FEATURE_DRUG_DISCOVERY=true
FEATURE_TELEMEDICINE=true
FEATURE_GOOGLE_DRIVE_STORAGE=true
FEATURE_REAL_TIME_STREAMING=true
